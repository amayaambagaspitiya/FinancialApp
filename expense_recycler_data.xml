<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7 Sept 2023"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:id="@+id/date_txt_expense"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="35000.00"
                android:textAppearance="?android:textAppearanceMedium"
                android:textAlignment="textEnd"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:id="@+id/amount_txt_expense"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Water bill payment"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/purple"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:layout_below="@+id/amount_txt_expense"
                android:id="@+id/description_txt_expense"/>

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>